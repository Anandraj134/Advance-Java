<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>viewallServlet</servlet-name>
        <servlet-class>viewallServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addStudentServlet</servlet-name>
        <servlet-class>addStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProcessServlet</servlet-name>
        <servlet-class>updateProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delStudentServlet</servlet-name>
        <servlet-class>delStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delTableServlet</servlet-name>
        <servlet-class>delTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createDatabaseServlet</servlet-name>
        <servlet-class>createDatabaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteDatabaseServlet</servlet-name>
        <servlet-class>deleteDatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewallServlet</servlet-name>
        <url-pattern>/viewallServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addStudentServlet</servlet-name>
        <url-pattern>/addStudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProcessServlet</servlet-name>
        <url-pattern>/updateProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delStudentServlet</servlet-name>
        <url-pattern>/delStudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delTableServlet</servlet-name>
        <url-pattern>/delTableServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createDatabaseServlet</servlet-name>
        <url-pattern>/createDatabaseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteDatabaseServlet</servlet-name>
        <url-pattern>/deleteDatabaseServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
